@model IEnumerable<FMS.Models.Godown>

@{
    ViewBag.Title = "Godowns";
}

<div class="title">
    @Request["GodownType"] @ViewBag.Title
    <div class="float-right">
        @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GodownId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GodownId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GodownId })
        </td>
    </tr>
}

</table>
