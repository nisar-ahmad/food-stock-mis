@model IEnumerable<FMS.Models.CashTransaction>

@{
    ViewBag.Title = "Depot Payments";
}

<div class="title">
    @ViewBag.Title
    <div class="float-right">
        @Html.ActionLink("Add Payment", "Depot", "CashTransaction", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Shipments", "Depot", "CommodityTransaction", null, new { @class = "btn btn-info" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Depot")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CashVoucherNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.Bank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.AccountNumber)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CommodityType)
