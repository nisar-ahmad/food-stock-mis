        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromPlace.Name)
        </td>
