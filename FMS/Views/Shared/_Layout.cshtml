@using FMS.HtmlHelpers
@using FMS.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("head", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top pull-right nav2">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/"><img src="~/Content/img/fms-logo3.png" width="250" height="63"></a>
            </div>
            <div class="navbar-collapse collapse navcol pull-right navshiftdown">
                <ul class="nav navbar-nav">
                    @if (User.HasLevel(UserLevel.Directorate))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Directorate<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/Reports/DailyStockReport">Dashboard</a></li>
                                <li><a href="~/Dashboard/Directorate">Graphs</a></li>
                                <li><a href="~/CommodityTransaction/StorageOffice">Transactions</a></li>
                                <li><a href="~/WheatRequest">Wheat Requests</a></li>
                                @if (User.HasLevel(UserLevel.SystemAdmin))
                                {
                                    <li><a href="~/Directorate/Edit/1">Manage</a></li>
                                }
                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Flour Mills<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Dashboard/FlourMill">Dashboard</a></li>
                            <li><a href="~/CommodityTransaction/FlourMill">Transactions</a></li>
                            <li><a href="~/FlourMillChokar">Grinding</a></li>
                            @if (User.HasLevel(UserLevel.SystemAdmin))
                            {
                                <li><a href="~/FlourMill">Manage</a></li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Depots<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Dashboard/Depot">Dashboard</a></li>
                            <li><a href="~/CommodityTransaction/Depot">Transactions</a></li>
                            <li><a href="~/CashTransaction/DepotPayments">Payments</a></li>
                            <li><a href="~/DepotAllocation">Allocations</a></li>
                            <li><a href="~/DepotDamage">Damaged Stock</a></li>
                            <li><a href="~/CommodityTransaction/Dealer">Dealer Transactions</a></li>
                            <li><a href="~/CashTransaction/DealerPayments">Dealer Payments</a></li>
                            @if (User.HasLevel(UserLevel.SystemAdmin))
                            {
                                <li><a href="~/Depot">Manage Depots</a></li>
                                <li><a href="~/Dealer">Manage Dealers</a></li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (User.HasLevel(UserLevel.Directorate))
                            {
                                @*<li><a href="~/Reports/DailyStockReport">Daily Stock Report</a></li>*@
                                <li><a href="~/Reports/StorageOffice">Storage Offices</a></li>
                            }
                            <li><a href="~/Reports/FlourMillByVoucher">Flour Mill (Voucher-wise)</a></li>
                            <li><a href="~/Reports/DepotByVoucher">Depot (Voucher-wise)</a></li>
                            <li><a href="~/Reports/DepotByDealer">Depot (Dealer-wise)</a></li>
                            <li><a href="~/Reports/DistrictByDepot">District Stock (Depot-wise)</a></li>
                            <li><a href="~/Reports/DistrictByDepotCash">District Cash (Depot-wise)</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Setup<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            @if (User.HasLevel(UserLevel.SystemAdmin))
                            {
                                <li><a href="~/Account/Register">User Management</a></li>
                                <li><a href="~/Directorate/Edit/1">Directorate</a></li>
                                <li><a href="~/StorageOffice">Storage Offices</a></li>
                                <li><a href="~/FlourMill">Flour Mills</a></li>
                                <li><a href="~/Depot">Depots</a></li>
                                <li><a href="~/Contractor">Contractors</a></li>
                                <li><a href="~/ContractorVehicle">Contractor Vehicles</a></li>
                                <li><a href="~/DivisionalOffice">Divisional Offices</a></li>
                                <li><a href="~/DistrictOffice">District Offices</a></li>
                                <li><a href="~/Person?PersonType=FoodOfficer">Food Officers</a></li>
                                <li><a href="~/Godown?GodownType=StorageOffice">Storage Office Godowns</a></li>
                                <li><a href="~/Godown?GodownType=PASSCO">PASSCO Centers</a></li>
                                <li><a href="~/Bank">Banks</a></li>
                                <li><a href="~/BankAccount">Bank Accounts</a></li>
                                <li><a href="~/ContractorType">Contractor Types</a></li>
                                <li><a href="~/CommodityType">Commodity Types</a></li>
                                <li><a href="~/ShortageType">Shortage Types</a></li>
                                <li><a href="~/DamageType">Damage Types</a></li>
                                <li><a href="~/Unit">Units</a></li>
                                <li><a href="~/Province">Provinces</a></li>
                                <li><a href="~/District">Districts</a></li>
                                <li><a href="~/Tehsil">Tehsils</a></li>
                                <li><a href="~/UnionCouncil">Union Councils</a></li>
                            }
                            <li><a href="~/Dealer">Dealers</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_alerts")
        @RenderBody()
        <div class="prefooter">
            <br />
            <br />
            <hr />
        </div>

        <footer class="footercss">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year - AJK Food Stock Monitoring System</p>
                </div>
                <div class="col-md-6 text-right">
                    <p>Made by <a href="http://nrtdcorp.com/" target="_blank">NRTD Corporation</a>.</p>
                </div>
            </div>
        </footer>
        <br />
        <br />
    </div>
    <div class="profile-bar">
        @Html.Partial("_LoginPartial")
    </div>
    <!--<div id="printDate"></div>
    <div class="printURL">
        <script>
            document.write(location.href);
        </script>
    </div>-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker({ autoclose: true, format: 'dd M yyyy' });

        });

        $(".alert").fadeTo(2000, 500).slideUp(500, function () {
            $(".alert").alert('close');
        });
    </script>


