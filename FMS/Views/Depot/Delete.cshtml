@model FMS.Models.Depot

@{
    ViewBag.Title = "Delete Depot";
}
<div class="title">
    @ViewBag.Title
    <div class="float-right">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>

<h3>Are you sure you want to delete this Depot?</h3>
<div>
    @Html.DisplayFor(model => model.Place.Name)

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("District Office")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DistrictOffice.Place.Name)
        </dd>

        <dt>
            @Html.DisplayName("Bank Account")
        </dt>

        <dd>
            @Model.BankAccount.Bank.BankName - @Model.BankAccount.Branch Branch - Account No. @Model.BankAccount.AccountNumber
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
